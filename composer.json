{
    "name": "hwpay/app",
    "description": "HWPay application",
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": ">=8.5",
        "ext-bcmath": "*",
        "baldinof/roadrunner-bundle": "^3.1",
        "brick/math": "^0.14.1",
        "doctrine/dbal": "^4.0",
        "doctrine/doctrine-bundle": "^3.2",
        "doctrine/doctrine-migrations-bundle": "^3.4",
        "doctrine/orm": "^3.4",
        "moneyphp/money": "4.8.0",
        "symfony/clock": "^8.0",
        "symfony/console": "^8.0",
        "symfony/doctrine-messenger": "*",
        "symfony/dotenv": "^8.0",
        "symfony/framework-bundle": "^8.0",
        "symfony/messenger": "*",
        "symfony/monolog-bundle": "^4.0",
        "symfony/runtime": "^8.0",
        "symfony/uid": "^8.0",
        "symfony/validator": "^8.0",
        "symfony/yaml": "^8.0",
        "yceruto/money-bundle": "^1.5"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.0",
        "phpstan/phpstan-symfony": "^2.0",
        "phpunit/phpunit": "^11.0",
        "rector/rector": "^2.0",
        "squizlabs/php_codesniffer": "^3.10",
        "symfony/browser-kit": "^8.0",
        "symfony/css-selector": "^8.0",
        "symfony/maker-bundle": "^1.52",
        "symfony/phpunit-bridge": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": true,
        "sort-packages": true,
        "audit": {
            "ignore": [
                "PKSA-xbp4-qwr2-cbjj"
            ]
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php bin/console cache:clear --no-warmup 2>/dev/null || true"
        ],
        "post-update-cmd": [
            "php bin/console cache:clear --no-warmup 2>/dev/null || true"
        ],
        "test": "bin/phpunit",
        "test:unit": "bin/phpunit tests/Unit",
        "test:integration": "bin/phpunit tests/Integration",
        "test:db-reset": [
            "@php bin/console doctrine:schema:drop --full-database --force --env=test",
            "@php bin/console doctrine:migrations:migrate --no-interaction --env=test"
        ],
        "migrations:diff": "php bin/console doctrine:migrations:diff",
        "migrations:migrate": "php bin/console doctrine:migrations:migrate --no-interaction",
        "rector": "rector process",
        "rector:dry": "rector process --dry-run",
        "phpstan": "phpstan analyse --memory-limit=512M",
        "phpcs": "phpcs",
        "phpcbf": "phpcbf",
        "qa": [
            "@phpstan",
            "@phpcs"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": ">=8.0"
        }
    }
}
